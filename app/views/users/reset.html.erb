<section>
  <div class="container">
    <div class="jumbotron">
      <h2>Forget the password!</h2>

    <%= form_for @user, url: '/reset/' + @token  do |f| %>
    		<div class="form-group">
    			<%= f.label "New Password" %><br />
    			<%= f.password_field :passwd_new, class: "form-control" %>
    		</div>

        <div class="form-group">
      		<%= submit_tag "Reset", class: "btn btn-primary btn-lg" %>
        </div>

    <% end %>
    </div>
  </div>
</section>
