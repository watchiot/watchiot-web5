<section>
  <div class="container">
  	<div class="jumbotron">
  		<h2>Forget the password!</h2>

  		<p>We send the email to the primary email. For security purposes,
  			we can only resend to the primary email account for this account.
  		</p>

  		<%= form_for @user, url: '/forgot', method: 'post' do |f| %>
  			<div class="form-group">
  					<%= f.label :username, 'Enter email or username' %><br />
  					<%= f.text_field :username, class: "form-control" %>
				</div>
  			<div class="form-group">
          <%= submit_tag "Send", class: "btn btn-primary btn-lg" %>
        </div>
  		<% end %>
  	</div>
  </div>
</<section>
