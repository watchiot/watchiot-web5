<h3>Projects list</h3>
<br />

<div class="panel panel-success">
	<div class="panel-body">
		<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
			<div class="panel panel-default">
				<div class="panel-heading" role="tab" id="headingOne">
					<div class="row">
						<% unless @space.projects.any?%>
							<p class="text-center">Don't exist projects that belong to this space.</p>
						<%else%>
						<table class="table table-striped">
							<colgroup>
								<col class="col-xs-2">
								<col class="col-xs-2">
								<col class="col-xs-6">
							</colgroup>
							<thead>
							<tr>
								<th>Actions</th>
								<th>Project Name</th>
								<th>Project Description</th>
							</tr>
							</thead>
							<tbody>
							<% @space.projects.each do |project| %>
							<tr>
								<th scope="row">

									<%= link_to '/' + param_user + '/' + @space.name + '/' + project.name, class: 'list-action clear-background', title: 'Edit project', method: :get  do %>
										<i class="fa fa-pencil-square-o fa-2x"></i>
									<%end%>

									<%= link_to '/' + param_user + '/' + @space.name + '/' + project.name + '/setting', class: 'list-action clear-background', title: 'Setting project'  do %>
										<i class="fa fa-cog fa-2x"></i>
									<%end%>
								</th>
								<td><%= project.name %></td>
								<td><%= project.description %></td>

							</tr>
							<% end %>
							</tbody>
						</table>
						<%end%>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
