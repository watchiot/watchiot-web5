<table class="table table-striped">
	<colgroup>
		<col class="col-xs-6">
		<col class="col-xs-2">
		<col class="col-xs-2">
	</colgroup>
	<thead>
	<tr>
		<th>History</th>
		<th>User</th>
		<th>When</th>
	</tr>
	</thead>
	<tbody>
	<% @logs.each do |log| %>
	<tr>
		<td><%= raw(truncate(log.description, length: 90, escape: false)) %></td>
		<td><strong>by <%= user_name(log.user_action_id) %></strong></td>
		<td><%= distance_of_time_in_words(Time.now, log.created_at) %></td>
	</tr>
	<% end %>
	</tbody>
</table>
