<%= form_for @user, url: '/login' do |f|%>
<div class="form-group col-lg-6">
	<div class="panel panel-default">
	  <div class="panel-heading"><h4>Login</h4></div>
	  <div class="panel-body">
			<div class="form-group">
          <%= label_tag 'username or Email' %>
          <%= f.text_field :username, class: "form-control",  placeholder: "username or email"%>
			</div>
			<div class="form-group">
          <%= label_tag 'password' %>
          <%= f.password_field :password, class: "form-control",  placeholder: "password"%>
			</div>
			<div class="checkbox-inline">
          <label class="checkbox"><%= f.check_box :remember_me %>Remember me</label>
			</div>
			<div class="form-group">
							<a href="/forgot">Forgot your password?</a>
			</div>
			<div class="form-group">
				<%= f.submit "Login", class: "btn btn-primary btn-xl" %>
			</div>
			<div class="text-center">
				<%= link_to  'auth/github', class: "btn btn-link btn-xl", title: "Login With Github" do%>
						<i class="fa fa-github-square fa-4x"></i>
				<%end %>
			</div>
	  </div>
	</div>
</div>
<% end %>
