<div class="with-gradient" id="contactus">
	<div class="started-session">
		<div class="row value-props" >
			<h1 class="col-lg-12">Contact us</h1>
			<%= form_for @contactus, url: '/contact' do |f| %>

				<%= div_for(@contactus, class: "input") do %>
					<%= f.label :title, 'Email' %>
					<%= f.email_field :email, class: "form-control" %>
				<% end %>

				<%= div_for(@contactus, class: "input") do %>
					<%= f.label :title, 'Subject' %>
					<%= f.text_field :subject, class: "form-control" %>
				<% end %>

				<%= div_for(@contactus, class: "input") do %>
					<%= f.label :title, 'Body' %>
					<%= f.text_area :body, class: "form-control" %>
				<% end %>

				<%= submit_tag 'Send', class: "btn btn-primary btn-lg active" %>
			<% end %>

			<% flash.each do |key, value| %>
				<div class="alert alert-<%= key %>"><%= value %></div>
			<% end %>

		</div><!-- /.row -->
	</div>
</div>
